@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white text-center">
                    <h3><i class="bi bi-exclamation-triangle"></i> Access Denied</h3>
                </div>
                <div class="card-body text-center p-5">
                    <i class="bi bi-shield-x display-1 text-danger mb-3"></i>
                    <h4>You don't have permission to access this page</h4>
                    <p class="lead text-muted">This page requires specific privileges that your account doesn't have.</p>
                    
                    <hr class="my-4">
                    
                    <div class="d-grid gap-2 d-md-block">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                            <i class="bi bi-house"></i> Go to Home
                        </a>
                        <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-secondary btn-lg ms-2">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

