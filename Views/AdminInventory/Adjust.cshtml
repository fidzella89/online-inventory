@model OnlineInventory.ViewModels.InventoryAdjustmentViewModel
@{
    ViewData["Title"] = "Adjust Inventory";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Inventory Adjustment</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Adjust" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        @if (!string.IsNullOrEmpty(Model.ProductName))
                        {
                            <!-- Product is pre-selected, show as read-only -->
                            <div class="alert alert-primary">
                                <h5 class="mb-2"><i class="bi bi-box-seam"></i> Product</h5>
                                <p class="mb-1"><strong>@Model.ProductName</strong></p>
                                @if (Model.CurrentStock.HasValue)
                                {
                                    <p class="mb-0">Current Stock: <strong>@Model.CurrentStock</strong> units</p>
                                }
                            </div>
                            <input type="hidden" asp-for="ProductId" />
                        }
                        else
                        {
                            <!-- No product pre-selected, show dropdown -->
                            <div class="mb-3">
                                <label asp-for="ProductId" class="form-label"></label>
                                <select asp-for="ProductId" class="form-select" asp-items="ViewBag.Products">
                                    <option value="">-- Select Product --</option>
                                </select>
                                <span asp-validation-for="ProductId" class="text-danger"></span>
                            </div>

                            @if (Model.CurrentStock.HasValue)
                            {
                                <div class="alert alert-info">
                                    Current Stock: <strong>@Model.CurrentStock</strong> units
                                </div>
                            }
                        }

                        <div class="mb-3">
                            <label asp-for="QuantityChange" class="form-label"></label>
                            <input asp-for="QuantityChange" class="form-control" type="number" />
                            <small class="text-muted">Use positive numbers to add stock, negative to reduce</small>
                            <span asp-validation-for="QuantityChange" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Reason" class="form-label"></label>
                            <select asp-for="Reason" class="form-select">
                                <option value="">-- Select Reason --</option>
                                <option value="Purchase">Purchase</option>
                                <option value="Adjustment">Adjustment</option>
                                <option value="Return">Return</option>
                                <option value="Damaged">Damaged</option>
                                <option value="Loss">Loss</option>
                                <option value="Found">Found</option>
                            </select>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Transactions" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit Adjustment</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

