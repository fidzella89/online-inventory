@using Microsoft.AspNetCore.Identity
@using OnlineInventory.Models
@using Microsoft.Extensions.DependencyInjection
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h1 class="display-4">Online Inventory Management System</h1>
    <p class="lead">Welcome to the Online Inventory Management System</p>
    
    @if (!User.Identity?.IsAuthenticated == true)
    {
        <div class="alert alert-info d-inline-block mt-3">
            <i class="bi bi-info-circle"></i> Please <a href="@Url.Action("Login", "Account")" class="alert-link"><strong>login</strong></a> to access management features
        </div>
    }
    else
    {
        var userManager = Context.RequestServices.GetRequiredService<UserManager<ApplicationUser>>();
        var currentUser = await userManager.GetUserAsync(User);
        var displayName = currentUser?.FullName ?? User.Identity?.Name ?? "User";
        <div class="alert alert-success d-inline-block mt-3">
            <i class="bi bi-check-circle"></i> Welcome back, <strong>@displayName</strong>!
            @if (User.IsInRole("Admin"))
            {
                <span class="badge bg-danger">Admin</span>
            }
            else if (User.IsInRole("Staff"))
            {
                <span class="badge bg-info">Staff</span>
            }
        </div>
    }
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-box-seam display-4 text-primary"></i>
                    </div>
                    <h5 class="card-title">Product Management</h5>
                    <p class="card-text">Manage your products, prices, and inventory levels.</p>
                    <a href="/Admin/Products" class="btn btn-primary">Go to Products</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-clipboard-data display-4 text-success"></i>
                    </div>
                    <h5 class="card-title">Inventory Tracking</h5>
                    <p class="card-text">Track inventory transactions and make adjustments.</p>
                    <a href="/Admin/Inventory/Transactions" class="btn btn-success">View Transactions</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-cart-check display-4 text-info"></i>
                    </div>
                    <h5 class="card-title">Order Management</h5>
                    <p class="card-text">View and manage customer orders.</p>
                    <a href="/Admin/Orders" class="btn btn-info">View Orders</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-file-code"></i> API Documentation & Testing
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6><i class="bi bi-lightbulb"></i> Interactive API Testing with Swagger</h6>
                        <p class="mb-2">
                            Test all API endpoints interactively using Swagger UI:
                        </p>
                        <a href="/swagger" class="btn btn-primary" target="_blank">
                            <i class="bi bi-play-circle"></i> Open Swagger UI
                        </a>
                        <small class="d-block mt-2 text-muted">
                            Swagger provides a user-friendly interface to test all API endpoints without writing code.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">API Endpoints Reference</h5>
                </div>
                <div class="card-body">
                    <h6>Product API</h6>
                    <ul>
                        <li><code>GET /api/products</code> - Get paginated products (supports filtering & sorting)</li>
                        <li><code>GET /api/products/{id}</code> - Get product by ID</li>
                        <li><code>POST /api/products</code> - Create new product</li>
                        <li><code>PUT /api/products/{id}</code> - Update product</li>
                        <li><code>DELETE /api/products/{id}</code> - Delete product</li>
                    </ul>

                    <h6 class="mt-3">Order API</h6>
                    <ul>
                        <li><code>GET /api/orders</code> - Get paginated orders</li>
                        <li><code>GET /api/orders/{id}</code> - Get order by ID</li>
                        <li><code>POST /api/orders</code> - Create new order (reduces inventory)</li>
                    </ul>

                    <h6 class="mt-3">Category API</h6>
                    <ul>
                        <li><code>GET /api/categories</code> - Get all categories</li>
                        <li><code>GET /api/categories/{id}</code> - Get category by ID</li>
                        <li><code>POST /api/categories</code> - Create new category</li>
                    </ul>

                    <h6 class="mt-3">Inventory API</h6>
                    <ul>
                        <li><code>GET /api/inventory/transactions</code> - Get inventory transactions</li>
                        <li><code>POST /api/inventory/adjust</code> - Manual inventory adjustment</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
